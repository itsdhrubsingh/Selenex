{
  "manifest_version": 3,
  "name": "SeleneX â€“ Selenium Recorder",
  "description": "Record browser interactions and generate reliable Selenium Python automation scripts using smart selector heuristics.",
  "version": "1.0.0",
  "icons": {
    "128": "icons/icon.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}